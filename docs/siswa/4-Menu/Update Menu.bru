meta {
  name: Update Menu
  type: http
  seq: 6
}

put {
  url: http://localhost:8080/api/admin-stan/menu/1
  body: json
  auth: bearer
}

auth:bearer {
  token: {{token}}
}

body:json {
  {
    "nama_makanan": "Nasi Goreng Spesial",
    "harga": 18000,
    "jenis": "makanan",
    "deskripsi": "Nasi goreng spesial dengan telur dan udang",
    "stock": 75,
    "foto": "data:image/jpeg;base64,"
  }
}

docs {
  # Update Menu with Base64 Image
  
  ## Notes
  - Only include fields you want to update
  - Old image will be automatically deleted when updating foto field with new base64 image
  - If foto field is omitted, existing photo remains unchanged
  - Base64 image format: `data:image/<type>;base64,<base64_string>` or just `<base64_string>`
  - Supported formats: PNG, JPEG/JPG, GIF, WebP
  - Stock field can be updated to manage inventory levels
}

tests {
  test("Status is 200", function() {
    expect(res.getStatus()).to.equal(200);
